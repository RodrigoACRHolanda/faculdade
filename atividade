package aula01;

import java.util.Scanner;

public class MyCode {

    public static void main(String[] args) {
        
     
        Scanner scanner = new Scanner(System.in);
        
      
        System.out.println("Digite seu nome completo:");
        String nomeCompleto = scanner.nextLine();
        
        System.out.println("Digite sua idade:");
        int idade = scanner.nextInt();
        
        System.out.println("Digite a nota da primeira avaliação:");
        double nota1 = scanner.nextDouble();
        
        System.out.println("Digite a nota da segunda avaliação:");
        double nota2 = scanner.nextDouble();
        
 
        double media = (nota1 + nota2) / 2;
        

        System.out.println("Nome completo: " + nomeCompleto);
        System.out.println("Idade: " + idade);
        System.out.println("Nota da primeira avaliação: " + nota1);
        System.out.println("Nota da segunda avaliação: " + nota2);
        System.out.println("Média das notas de avaliação: " + media);
        
      
        scanner.close();
    }

}
